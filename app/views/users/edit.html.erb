<%= render "shared/error", obj:@user %>
<div class="user-form">
  <div class="container">
    <%= form_with model: @user do |form| %>
    <div class="login-form">
      <div class="login-title">
        <h3>アカウント編集</h3>
      </div>
      <div class="login-menu">
        <div class="login-list">
          <div class="list-title">
            <p>メールアドレス</p>
            <p class="marking">必須</p>
          </div>
          <%= form.text_field :email, :placeholder => "メールアドレスを入力してください" %>
        </div>
        <div class="login-list">
          <div class="list-title">
            <p>パスワード</p>
            <p class="marking">必須</p>
          </div>
          <%= form.password_field :password_digest, :placeholder => "パスワードを入力してください" %>
        </div>
        <div class="login-list">
          <div class="list-title">
            <p>パスワード</p>
            <p class="marking">必須</p>
          </div>
          <%= form.password_field :password_digest, :placeholder => "同じパスワードを再入力してください" %>
        </div>
      </div>
      <div class="login-link">
        <%= form.submit "更新する", class:"link-button" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
