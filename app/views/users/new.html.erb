<div class="user-form">
  <div class="container">
    <%= form_with model: @user do |form| %>
    <div class="login-form">
      <div class="login-title">
        <h3>新しいアカウントを作成</h3>
      </div>
      <div class="login-menu">
        <div class="login-list">
          <div class="list-title">
            <p>名前</p>
            <p class="marking">必須</p>
          </div>
          <%= form.text_field :name, :placeholder => "名前を入力してください" %>
        </div>
        <div class="login-list">
          <div class="list-title">
            <p>メールアドレス</p>
            <p class="marking">必須</p>
          </div>
          <%= form.text_field :email, :placeholder => "メールアドレスを入力してください" %>
        </div>
        <div class="login-list">
          <div class="list-title">
            <p>パスワード</p>
            <p class="marking">必須</p>
          </div>
          <%= form.password_field :password, :placeholder => "パスワードを入力してください" %>
        </div>
        <div class="login-list">
          <div class="list-title">
            <p>パスワード</p>
            <p class="marking">必須</p>
          </div>
          <%= form.password_field :password_confirmation, :placeholder => "同じパスワードを再入力してください" %>
        </div>
      </div>
      <div class="login-link">
        <%= form.submit "アカウントを作成", class:"link-button" %>
        <%= link_to "すでにアカウントをお持ちの方はこちら", "/login" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
