<%= render "shared/error", obj:@user %>
<div class="user-form">
  <div class="container">
    <%= form_with model: @user do |form| %>
    <div class="acount-menu">
      <div class="user-menu">
        <ul>
          <li>
            <%= link_to "アカウント", "/users/#{@user.id}"%>
          </li>
          <li>
            <%= link_to "プロフィール", "/profile/#{@user.id}", class:"select-list" %>
          </li>
          <li>
            <%= link_to "予約履歴", "/books" %>
          </li>
          <li>
            <%= link_to "提供物件", "/users" %>
          </li>
          <li>
            <%= link_to "ルームを登録する", "/rooms/new" %>
          </li>
        </ul>
      </div>
      <div class="acount-form">
        <div class="form-title">
          <h3>プロフィール</h3>
        </div>
        <div class="form-menu">
          <div class="form-list">
            <% if @user.image? %>
              <%= image_tag @user.image.url %>
            <% else %>
              <%= image_tag "default.user.image.png" %>
            <% end %>
          </div>
          <div class="form-list">
            <p>プロフィール画像</p>
            <%= form.file_field :image %>
          </div>
          <div class="form-list">
            <p>名前</p>
            <%= form.text_field :name %>
          </div>
          <div class="form-list">
            <p>自己紹介</p>
            <%= form.text_area :introduce %>
          </div>
        </div>
        <div class="link-menu">
          <%= form.submit "更新する", class:"link-item"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
